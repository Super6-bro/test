/* pages/4myself/4myself.wxss */
.body{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}
.userInfo{
  height: 4rem;
  margin: 0;
  padding: 1rem;
  width: 100%;
  height: max-content;
  background-color: #f0f0f0;
  overflow: hidden;
}
.leftIcon{
  margin-right: 0.6rem;
  float: left;
  clear: left;
  display: inline-block;
}
.profileIcon{
  width:3rem;
  height:3rem;
  border-radius:10%;
}
.rightInfo{
  width: 80%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size:0.8rem;  
  caret-color: #cccccc;
  float: right;
  clear: right;
  display: inline-block;
}
.petName{
  margin-bottom: 0.5rem;
  padding: 0;
  font-size: 1rem; 
  font-weight: bold;
  color: #000000;
}
.other{
  font-size: 0.8rem;
  color: #999999;
  font-weight: normal;
}
.list_box{
  margin-top: 0.5rem;
  padding:0 1.5rem;
  background-color: #ffffff;
  overflow:  hidden;
  position: relative;  
}
.list{ 
  padding:1rem 0;
  border-bottom: 2rpx solid #f0f0f0;
  color: #555555;
  clear: both;
  overflow: hidden;
}
.l_left{
  float: left;
  clear: left;
}
.l_right{
  text-align: right;
  float: right;
  clear: right;
}
.nextImg{
  margin-top: 8rpx; 
  padding: 0;
  width: 1rem;
  height: 1rem;
}
.historical_achievements{
  margin: 0.5rem 0 0 0;
  padding: 0.5rem;
  border-top: dashed 2rpx #cccccc;
  line-height: 1.8rem;
  color: #999999;
}
.certificate_name{
  color: #555555;
  font-weight: bold;
}